      = gravatar_for(current_user, {size: 25})
      #{current_user.f_name} #{current_user.l_name}
      %span.caret
    %ul.dropdown-menu
      %li
        %a{:href => "#"} Action 1
      %li
        %a{:href => "#"} Action 2
      %li

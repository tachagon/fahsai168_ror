- provide(:title, "แก้ไขโปรไฟล์")
- provide(:user_form_button_text, "แก้ไขโปรไฟล์")
- provide(:search_attr, "member_code")
- provide(:search_title, "รหัสสมาชิกของผู้แนะนำ")

.container

  -# breadcrumb
  - if current_user.is_admin?
    = gen_breadcrumb({"หน้าแรก" => root_path, "สมาชิกทั้งหมด" => users_path, "โปรไฟล์ของ#{@user.f_name}" => @user, "แก้ไขโปรไฟล์" => "active"})
  - else
    = gen_breadcrumb({"หน้าแรก" => root_path, "โปรไฟล์ของ#{@user.f_name}" => @user, "แก้ไขโปรไฟล์" => "active"})

  .page-header
    %h1
      แก้ไขโปรไฟล์

  .row
    .col-sm-4
      -# show profile image
      .col-sm-12.center
        .panel.panel-default
          .panel-heading
            %h3.panel-title ภาพโปรไฟล์
          .panel-body
            = gravatar_for @user, {size: 200}
            - if current_user?(@user)
              %a.btn.btn-primary.btn-block{:href => "http://gravatar.com/emails", target: "_blank", rel: "nofollow"}
                เปลี่ยน

    .col-sm-8
      -# edit user information
      .panel.panel-default
        .panel-heading
          %h3.panel-title.center ข้อมูลโปรไฟล์
        .panel-body
          = form_for @user, html: {class: "form-horizontal"} do |f|
            = render partial: 'form', locals: {f: f, sponser: @user.upline}

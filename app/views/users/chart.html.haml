- provide(:title, "ผังองค์กร")

.container
  .page-header
    %h1
      แผนผังองค์กร
      %small= "ของ#{@user.f_name}"
      - if @downlines.count < 3
        .pull-right
          %a{:href => new_user_path(sponser_id: @user.id), class: "btn btn-info btn-fab", data: {toggle: "tooltip", placement: "left"}, title: "เพิ่มสมาชิกใหม่"}
            %i.fa.fa-plus

.container
  .row
    .col-md-8.col-md-offset-2

      -# show upline (@user)
      .row
        .col-xs-4.col-xs-offset-4.col-md-4.col-md-offset-4
          = render partial: "user_card_mini", locals: {user: @user}

      -# show downline
      .row
        - for i in 0...3
          .col-xs-4.col-md-4
            - unless @downlines[i].nil?
              = render partial: "user_card_mini", locals: {user: @downlines[i]}
            - else
              = render partial: "user_card_mini_empty"

